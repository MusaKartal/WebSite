@model IEnumerable<LavenderHome.Models.Product>

@{
    ViewData["Title"] = "Get";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-div">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @if (item.Photo != null)
                        {
                            <img src="~/ProductImages/@item.Photo" style="width: 125px; margin-right: 10px;" />
                        }
                        else
                        {
                            <img src="~/ProductImages/NullPhoto.webp" style="width: 125px; margin-right: 10px;" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>