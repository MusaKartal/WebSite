@model IEnumerable<LavenderHome.Models.Product>
@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
        @*------item--------*@
        <div class="container-fluid">
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.Role == "Anasayfa")
                    {
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                            <div class="glasses_box">
                                @if (item.Photo != null)
                                {

                                    <figure><img style="height: 250px; width: 350px;" src="~/ProductImages/@item.Photo" alt="#" /></figure>
                                }
                                else
                                {
                                    <figure><img src="~/ProductImages/NullPhoto.webp" alt="#" /></figure>
                                }
                                <h3><span class="blu"></span>@Html.DisplayFor(modelItem => item.Name)</h3>
                                <h3><span class="blu">₺</span>@Html.DisplayFor(modelItem => item.Price)</h3>
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>

                        </div>
                    }
                }
            </div>
        @*------item--------*@
    </div>
   





